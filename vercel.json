{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/download",
      "methods": ["POST"],
      "dest": "api/download.py"
    },
    {
      "src": "/api/mirrors",
      "methods": ["GET"],
      "dest": "api/mirrors.py"
    },
    {
      "src": "/{doi:path}",
      "dest": "api/download.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
